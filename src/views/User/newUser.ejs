<h1>
    <%= data.title %>
</h1>

<form action="/insert-user" method="post">
    <div class="mb-3">
        <label for="username" class="form-label">Tài khoản</label>
        <input type="text" class="form-control" id="username" name="username">
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Mật khẩu</label>
        <input type="password" class="form-control" id="password" name="password">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Tên</label>
        <input type="text" class="form-control" id="name" name="fullname">
    </div>
    <div class="mb-3">
        <label for="name" class="form-label">Giới tính</label>
        <select class="form-select" name="sex">
            <option selected>---Chọn giới tính---</option>
            <option value="Nam" name>Nam</option>
            <option value="Nữ">Nữ</option>
        </select>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email">
    </div>
    <div class="mb-3">
        <label for="address" class="form-label">Địa chỉ</label>
        <input type="text" class="form-control" id="address" name="address">
    </div>
    <div class="mb-3">
        <label for="quyen" class="form-label">Nhóm</label>
        <select class="form-select" name="id_group">
            <option selected>---Chọn nhóm---</option>
            <option value="0" name>Admin</option>
            <option value="1">User</option>
        </select>
    </div>
    <button class="btn btn-primary" type="submit">Tạo tài khoản</button>
</form>