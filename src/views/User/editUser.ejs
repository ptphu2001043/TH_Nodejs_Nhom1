<h1>
    <%= data.title %>
</h1>

<form action="/update-user" method="post">
    <table class="table">
        <tbody class="table-group-divider">
            <input type="text" value="<%= data.row.id_user %>" name="id_user" hidden>
            <tr>
                <th scope="col">Username</th>
                <td>
                    <input class="form-control" type="text" value="<%= data.row.username %>" name="username">
                </td>
            </tr>
            <tr>
                <th scope="col">Password</th>
                <td>
                    <input class="form-control" type="password" value="<%= data.row.password %>" name="password">
                </td>
            </tr>
            <tr>
                <th scope="col">Họ tên</th>
                <td>
                    <input class="form-control" type="text" value="<%= data.row.fullname %>" name="fullname">
                </td>
            </tr>
            <tr>
                <th scope="col">Địa chỉ</th>
                <td>
                    <input class="form-control" type="text" value="<%= data.row.address %>" name="address">
                </td>
            </tr>
            <tr>
                <th scope="col">Giới tính</th>
                <td>
                    <input class="form-control" type="text" value="<%= data.row.sex %>" name="sex">
                </td>
            </tr>
            <tr>
                <th scope="col">Email</th>
                <td>
                    <input class="form-control" type="email" value="<%= data.row.email %>" name="email">
                </td>
            </tr>
            <tr>
                <th scope="col">Quyền</th>
                <td>
                    <select class="form-select" name="id_group" id="">
                        <option value="0">Admin</option>
                        <option value="1">User</option>
                    </select>
                </td>
            </tr>
        </tbody>
    </table>
    <input class="btn btn-primary" type="submit" value="Cập nhật">
</form>